{# @var segments \Domain\Entity\Segment[] #}

{% extends "base.html.twig" %}

{% block body %}
    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar">

            <!-- LOGO -->
            <div class="topbar-left">
            </div>

            <!-- ========== Top Menu Start ========== -->
            {% include viewPaths.webAppCommon ~ 'top_navbar.html.twig' %}
            <!-- top menu end -->

        </div>
        <!-- Top Bar End -->

        <!-- ========== Left Sidebar Start ========== -->
        {% include viewPaths.webAppCommon ~ 'left_sidemenu.html.twig' %}
        <!-- left sidebar End -->

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container-fluid">

                    <div class="row mt-5">
                        <div class="col-10">
                            <h2>Segment {{ segment.name }}</h2>
                        </div>
                        <div class="col-2">
                            <a href="{{ path('home') }}" class="btn btn-outline-danger m-t-10">Regresar</a>
                        </div>


                    </div>
                    <div class="row">
                        <div class="col-2">
                            <p>Total de restaurantes</p>
                        </div>
                        <div class="col-10">
                            <p>{{ segment.countRestaurants }}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <p>Popularidad Media</p>
                        </div>
                        <div class="col-10">
                            <p>{{ segment.averagePopularityRate }}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <p>Satifacion Media</p>
                        </div>
                        <div class="col-10">
                            <p>{{ segment.averageSatisfactionRate }}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <p>Precio Medio</p>
                        </div>
                        <div class="col-10">
                            <p>{{ segment.averagePrice }}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <p>Total Review</p>
                        </div>
                        <div class="col-10">
                            <p>{{ segment.totalReviews }}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <a href="{{ path('segment_edit_id', {'id': segment.id}) }}" class="btn btn-primary">
                                <i class="fa fa-edit"></i> Editar
                            </a>
                            <a href="{{ path('segment_delete_id', {'id': segment.id}) }}" class="btn btn-danger m-l-15">
                                <i class="far fa-trash-alt"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end content -->



            <footer class="footer">
                Â© 2020 Delectatech
            </footer>
        </div>

        <!-- ============================================================== -->
        <!-- End Right content here -->
        <!-- ============================================================== -->

    </div>
    <!-- END wrapper -->

{% endblock %}
